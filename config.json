{
  "setup":{
    "run_num": "run30.h5"
      },
  "paths":{
    "pretrained_model": "uncased_L-12_H-768_A-12/",
    "config_path": "uncased_L-12_H-768_A-12/bert_config.json",
    "ckpt_path": "uncased_L-12_H-768_A-12/bert_model.ckpt",
    "vocab_path": "uncased_L-12_H-768_A-12/vocab.txt",
    "train_data_dir": "data/smalltest.csv",
    "val_data_dir": "data/dev.csv",
    "test_data_dir": "data/spot.csv"
  },
  "model": {
    "seq_len": 128,
    "shuffle": 200,
    "epochs": 2,
    "batch_size":16,
    "lr": 0.0001,
    "loss_fn": "sparse_categorical_crossentropy",
    "metrics": "sparse_categorical_accuracy"
  },
  "callbacks": {
    "save_dir": "h5models/",
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": false,
    "checkpoint_verbose": true
  }
}
